# .env.sandbox - Sandbox Environment Configuration
# IMPORTANT: Replace YOUR_CLUSTER_NAME with your actual MongoDB Atlas cluster name

# Server Configuration
WEB_PORT=3000
NODE_ENV=sandbox

# MongoDB Atlas Connection String
# Format: mongodb+srv://admin:YOUR_PASSWORD@YOUR_CLUSTER_NAME.mongodb.net/game_db?retryWrites=true&w=majority
# Replace: YOUR_CLUSTER_NAME, YOUR_PASSWORD
DB_URI=mongodb+srv://admin:Darius12345!@YOUR_CLUSTER_NAME.mongodb.net/game_db?retryWrites=true&w=majority

# Microservices URIs
AUTH_URI=http://localhost:3100
NEWS_URI=http://localhost:3200
CHAT_URI=http://localhost:3300
ECONOMY_URI=http://localhost:3400

# JWT Secrets - FOR SANDBOX ONLY!
SECRET_ACCESS=sandbox_jwt_secret_key
SECRET_REFRESH=sandbox_refresh_secret_key

# Game access password for testing
GAME_PASSWORD=testjoc

# CORS - allow all for sandbox
WEB_ORIGIN=*
