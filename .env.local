# .env.local - Local Development Environment Variables
# This file is tracked in git for codespaces/local development
# For production, use .env.production (also tracked but with real secrets)

# Server Configuration
WEB_PORT=3000
NODE_ENV=development

# MongoDB connection URI
DB_URI=mongodb://localhost:27017/game_db

# Microservices URIs (for local development with Docker)
AUTH_URI=http://localhost:3100
NEWS_URI=http://localhost:3200
CHAT_URI=http://localhost:3300
ECONOMY_URI=http://localhost:3400

# JWT Secrets - FOR LOCAL DEVELOPMENT ONLY!
# In production, use .env.production with real secrets
SECRET_ACCESS=dev_jwt_secret_key_change_in_production
SECRET_REFRESH=dev_refresh_secret_key_change_in_production

# Game access password for testing
GAME_PASSWORD=testjoc

# CORS Origin - allow all for local development
WEB_ORIGIN=*
