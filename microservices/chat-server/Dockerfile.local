# Dockerfile.local - Chat Server (Development)
# Real-time chat microservice for local development

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies first (for better caching)
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose the service port
EXPOSE 3300

# Start the server
CMD ["npm", "start"]
