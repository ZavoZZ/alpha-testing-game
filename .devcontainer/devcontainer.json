{
  "name": "MERN Economic Game - Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Core
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        
        // Kilo AI - installed automatically on rebuild
        "kilocode.kilo-code",
        
        // Docker
        "ms-azuretools.vscode-docker",
        
        // Git
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat",
        
        // Development tools
        "mutantdino.resourcemonitor",
        "christian-kohler.path-intellisense",
        
        // React / JavaScript
        "dsznajder.es7-react-js-snippets",
        "formulahendry.auto-rename-tag",
        
        // UI / CSS
        "pranaygp.vscode-css-peek",
        
        // MongoDB
        "mongodb.mongodb-vscode"
      ],
      "settings": {
        // Editor
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.insertSpaces": false,
        "editor.detectIndentation": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        
        // Files
        "files.associations": {
          "*.jsx": "javascriptreact",
          "*.js": "javascript",
          ".env*": "dotenv"
        },
        "files.exclude": {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/qdrant_storage": true
        },
        
        // Search
        "search.exclude": {
          "**/node_modules": true,
          "**/qdrant_storage": true,
          "**/package-lock.json": true
        },
        
        // JavaScript
        "javascript.updateImportsOnFileMove.enabled": "always",
        "javascript.suggest.autoImports": true,
        "javascript.validate.enable": true,
        
        // ESLint
        "eslint.enable": true,
        "eslint.validate": [
          "javascript",
          "javascriptreact"
        ],
        
        // Git
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        
        // Terminal
        "terminal.integrated.defaultProfile.linux": "bash",
        
        // Prettier
        "prettier.singleQuote": true,
        "prettier.useTabs": true,
        "prettier.tabWidth": 2,
        
        // Docker
        "docker.showStartPage": false
      }
    }
  },
  "postCreateCommand": "npm install",
  "portsAttributes": {
    "3000": {"label": "Main App API", "onAutoForward": "notify"},
    "3001": {"label": "Dev Server (Hot Reload)", "onAutoForward": "notify"},
    "3100": {"label": "Auth Service", "onAutoForward": "notify"},
    "3200": {"label": "News Service", "onAutoForward": "notify"},
    "3300": {"label": "Chat Service", "onAutoForward": "notify"},
    "3400": {"label": "Economy Service", "onAutoForward": "notify"},
    "27017": {"label": "MongoDB", "onAutoForward": "notify"},
    "6333": {"label": "Qdrant Vector DB", "onAutoForward": "notify"}
  },
  "forwardPorts": [3000, 3001, 3100, 3200, 3300, 3400, 27017, 6333],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "node"
}
